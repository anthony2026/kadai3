<%= flash[:notice] %>
<div class="container">
  <div class="row">
    <div class="col-xs-3">
<h1>User info</h1>

<%= attachment_image_tag @user, :profile_image,   fallback: "no_image.jpg", size: "100x100" %>

<table class="table">
    <tr>
      <th>name</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th>introduction</th>
      <td><%= @user.introduction %></td>
    </tr>
</table>

<%= link_to "" , edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
<h1>New book</h1>
<%= form_for(@book) do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Opinion</p>
<%= f.text_area :body %>
<%= f.submit 'Create Book', class: "btn btn-primary" %>
<% end %>
</div>


<div class = "col-xs-9">
<table class ="table">
	<h1>Users</h1>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
  	<% @users.each do |user| %>
      <tr>
      	<td><%= attachment_image_tag user, :profile_image, :fill, 50, 50,   fallback: "no_image.jpg", size: "50x50" %>
        </td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user_path(user) %></td>
       </tr>
      <% end %>
  </tbody>
</table>
</div>
</div>
</div>